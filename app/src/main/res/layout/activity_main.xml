<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <LinearLayout
            android:id="@+id/team_a_col"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-light"
                android:text="Team A"
                android:textAlignment="center"
                android:textColor="#616161"
                android:textSize="24dp" />


            <TextView
                android:id="@+id/scr_team_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-medium"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="56dp" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="touchdownA"
                style="@style/score_car_buttons"
                android:text="Touchdown" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="addOneA"
                style="@style/score_car_buttons"
                android:text="Extra Point" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="addTwoA"
                style="@style/score_car_buttons"
                android:text="Two Point Conversion" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="addThreeA"
                style="@style/score_car_buttons"
                android:text="Field Goal" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="addTwoA"
                style="@style/score_car_buttons"
                android:text="Safety" />
        </LinearLayout>


        <View
            android:id="@+id/divide"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@android:color/black"/>

        <LinearLayout
            android:id="@+id/team_b_col"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-light"
                android:text="Team B"
                android:textAlignment="center"
                android:textColor="#616161"
                android:textSize="24dp" />


            <TextView
                android:id="@+id/scr_team_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-medium"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="56dp" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="touchdownB"
                style="@style/score_car_buttons"
                android:text="Touchdown" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="addOneB"
                style="@style/score_car_buttons"
                android:text="Extra Point" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="addTwoB"
                style="@style/score_car_buttons"
                android:text="Two Point Conversion" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="addThreeB"
                style="@style/score_car_buttons"
                android:text="Field Goal" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="addTwoB"
                style="@style/score_car_buttons"
                android:text="Safety" />

        </LinearLayout>


    </LinearLayout>



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="reset"
        android:layout_alignParentBottom="true"
        style="@style/score_car_buttons"
        android:text="RESET" />

</RelativeLayout>

